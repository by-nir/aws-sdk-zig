    //
    // Codegen
    //

    {
      "type": "shell",
      "label": "codegen:test",
      "command": "zig",
      "args": ["build", "test"],
      "options": {
        "cwd": "${workspaceRoot}/codegen"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },

    // Install unit tests for debugging
    {
      "type": "shell",
      "label": "codegen:build-tests",
      "command": "zig",
      "args": ["build", "install", "test"],
      "options": {
        "cwd": "${workspaceRoot}/codegen"
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "close": true
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": "false"
      }
    },

